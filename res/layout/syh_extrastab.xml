
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        	  xmlns:tools="http://schemas.android.com/tools"
    		  android:id="@+id/SyhExtrasTabLayout"
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent" 
              android:orientation="vertical"
              android:gravity="center"
              style="?android:attr/buttonBarStyle"
              android:background="@color/white"
              android:paddingTop="0dip" >
              
        <TextView
            android:id="@+id/textViewDevInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dip"
            android:paddingTop="10dip"
            android:text="@string/developer_info"
            android:textColor="@color/black"
            android:textStyle="italic" />

          <TextView
        android:id="@+id/textViewAppVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:background="@color/white"
        android:paddingTop="5dip"
        android:paddingBottom="5dip" />
                
       	<Button 
        android:id="@+id/ResetSettings"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:typeface="serif"
        android:textSize="16sp"
        style="?android:attr/buttonBarButtonStyle"
        android:text="@string/reset_settings"
        />   
        
       	<Button 
        android:id="@+id/FlashKernel"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:typeface="serif"
        android:textSize="16sp"
        style="?android:attr/buttonBarButtonStyle"
        android:text="@string/flash_kernel"/>
        
        <TextView
        android:id="@+id/textViewKernelVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@color/ltgray"
        android:paddingTop="0dip"
        android:paddingBottom="20dip"
        android:paddingLeft="10dip" />
                      	
</LinearLayout>

