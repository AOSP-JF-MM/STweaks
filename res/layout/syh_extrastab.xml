
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  android:id="@+id/SyhExtrasTabLayout"
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent" 
              android:orientation="vertical"
              android:gravity="center"
              android:background="@color/white"
              android:paddingTop="0dip"
              android:elevation="@dimen/padding_medium">
              
        <TextView
            android:id="@+id/textViewDevInfo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/developer_info"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:gravity="center"/>

          <TextView
        android:id="@+id/textViewAppVersion"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:background="@color/white"
        android:gravity="center"/>
                
       	<Button 
        android:id="@+id/ResetSettings"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:typeface="serif"
        android:textSize="16sp"
        style="?android:attr/buttonBarButtonStyle"
        android:text="@string/reset_settings"
        android:layout_marginTop="15dp" />
        
       	<Button 
        android:id="@+id/FlashKernel"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:typeface="serif"
        android:textSize="16sp"
        style="?android:attr/buttonBarButtonStyle"
        android:text="@string/flash_kernel"
        android:layout_marginBottom="5dp" />
        
        <TextView
        android:id="@+id/textViewKernelVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:paddingTop="10dip"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium"
        android:layout_margin="10dp"/>
                      	
</LinearLayout>

